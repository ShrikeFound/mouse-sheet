<!DOCTYPE html>
<html>
  <head>
    <title>Mouse Sheet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />  
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Cardo:wght@700&family=Quicksand&display=swap" rel="stylesheet">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <div class="header-container container">
      <div class="logo-container">
        <%= link_to "Mouse Sheet", root_path, :class => "logo"%>
        <button class="nav-toggle" id="nav-toggle">Menu</button>
      </div>
      <nav class='nav'>
      <ul class="nav-list minimized" id="nav-list">
        <li><%= link_to('Characters', characters_path) %></li>
        <li><%= link_to('Groups', groups_path) %></li>
        <% if user_signed_in? %>
          <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
        <% else %>
          <li><%= link_to('Login', new_user_session_path) %></li>
        <% end %>
        <li><%= link_to "Sign Up", new_user_registration_path %><br /></li>
      </ul>
      </nav>
    </div>
    </header>
    <div class="container">
      <%if flash.notice%>
        <p class="flash notice"><%= flash.notice%></p>
      <% end %>
      <%if flash.alert%>
        <p class="flash alert"><%= flash.alert%></p>
      <% end %>
    </div>
    <main>
      <%= yield %>
    </main>
    <%= javascript_pack_tag 'custom' %>
  </body>
</html>
