<%= form_for @character do |f|%>
  <%= f.label :name%>
  <%= f.text_field :name%>
  <%= f.label :age %>
  <%= f.number_field :age%>
  <% 
    cities = []
    City.find_each do |city|
      c = [city.name,city.id]
      cities << c
    end 

    ranks = []
    Rank.find_each do |rank|
    r = [rank.name,rank.id]
    ranks << r
    end
  %>
  <%= f.label :city, "Home"%>
  <%= select_tag(:city, options_for_select(cities))%>
  <%= f.label :fur_color%>
  <%= f.text_field :fur_color%>
  <%= f.label :rank%>
  <%= select_tag(:rank, options_for_select(ranks))%>
  <%= f.label :cloak_color%>
  <%= f.text_field :cloak_color%>
  <%= f.label :parents%>
  <%= f.text_field :parents%>
  <%= f.label :senior_artisan%>
  <%= f.text_field :senior_artisan%>
  <%= f.label :mentor%>
  <%= f.text_field :mentor%>
  <%= f.label :friend%>
  <%= f.text_field :friend%>
  <%= f.label :enemy%>
  <%= f.text_field :enemy%>
  <%= f.submit "Join the Guard", :class => 'button-primary' %>
<% end %>