<%= form_for @character do |f|%>
  <%= f.label :name%>
  <%= f.text_field :name%>
  <%= f.label :age %>
  <%= f.number_field :age%>
  <% 
    cities = []
    City.find_each do |city|
      c = [city.name,city.id]
      cities << c
    end 

    ranks = []
    Rank.find_each do |rank|
    r = [rank.name,rank.id]
    ranks << r
    end

    parent_professions = [
      ["Apiarist","Apiarist"],
      ["Archivist","Archivist"],
      ["Armorer","Armorer"],
      ["Baker","Baker"],
      ["Boatcrafter","Boatcrafter"],
      ["Brewer","Brewer"],
      ["Carpenter","Carpenter"],
      ["Cartographer","Cartographer"],
      ["Glazier","Glazier"],
      ["Harvester","Harvester"],
      ["Insectrist","Insectrist"],
      ["Miller","Miller"],
      ["Potter","Potter"],
      ["Smith","Smith"],
      ["Stonemason","Stonemason"],
      ["Weaver","Weaver"]     
    ]

    artisan_professions = [
      ["Apiarist","Apiarist"],
      ["Archivist","Archivist"],
      ["Armorer","Armorer"],
      ["Baker","Baker"],
      ["Brewer","Brewer"],
      ["Carpenter","Carpenter"],
      ["Cartographer","Cartographer"],
      ["Glazier","Glazier"],
      ["Harvester","Harvester"],
      ["Insectrist","Insectrist"],
      ["Miller","Miller"],
      ["Potter","Potter"],
      ["Smith","Smith"],
      ["Stonemason","Stonemason"],
      ["Weaver","Weaver"] 
    ]

    mentor_professions = [
      ["Fighter","Fighter"],
      ["Healer","Healer"],
      ["Hunter","Hunter"],
      ["Instructor","Instructor"],
      ["Pathfinder","Pathfinder"],
      ["Scout","Scout"],
      ["Survivalist","Survivalist"],
      ["Weather Watcher","Weather Watcher"],
    ]

  %>
  <%= f.label :city, "Home"%>
  <%= select_tag(:city, options_for_select(cities))%>
  <%= f.label :fur_color%>
  <%= f.text_field :fur_color%>
  <%= f.label :rank%>
  <%= select_tag(:rank, options_for_select(ranks))%>
  <%= f.label :cloak_color%>
  <%= f.text_field :cloak_color%>
  <%= f.label :parents%>
  <%= f.text_field :parents%>
  <%= f.label :parent_profession%>
  <%= select_tag(:parent_profession, options_for_select(parent_professions)) %>
  <%= f.label :senior_artisan%>
  <%= f.text_field :senior_artisan%>
  <%= f.label :artisan_profession%>
  <%= select_tag(:artisan_profession, options_for_select(artisan_professions)) %>
  <%= f.label :mentor%>
  <%= f.text_field :mentor%>
  <%= f.label :mentor_profession%>
  <%= select_tag(:mentor_profession, options_for_select(mentor_professions)) %>
  <%= f.label :friend%>
  <%= f.text_field :friend%>
  <%= f.label :enemy%>
  <%= f.text_field :enemy%>
  <%= f.label :belief%>
  <%= f.text_field :belief%>
  <%= f.label :goal%>
  <%= f.text_field :goal%>
  <%= f.label :instinct%>
  <%= f.text_field :instinct%>
  <%= f.label :nature%>
  <%= f.number_field :nature%>
  <%= f.label :will%>
  <%= f.number_field :will%>
  <%= f.label :health%>
  <%= f.number_field :health%>
  <%= f.label :resources%>
  <%= f.number_field :resources%>
  <%= f.label :circles%>
  <%= f.number_field :circles%>
  <br/>
  <%= f.submit "Submit", :class => 'button-primary' %>
<% end %>